#wrapper
  %div{:class=>"register"}
    =form_for @user do |f|

      %div
      = f.label :username 
      = f.text_field :username , placeholder: "Enter your username"
      %div
      = f.label :email 
      = f.email_field :email, autofocus: true , placeholder: "Enter your email"

      %div
      = f.label :password 
      = f.password_field :password, autocomplete: "off", placeholder: "Enter your password"

      %div
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter password again"

      %div
      = f.submit "Sign up" 
